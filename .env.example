# ============================================================================
# Deep-Tutor Environment Configuration
# Copy this file to .env and fill in your API keys and settings.
# All API keys should be kept confidential and never committed to version control.
# You can adjust the max_token parameters in DeepTutor\config\agents.yaml.
# ============================================================================

# ============================================================================
# LLM (Large Language Model) Configuration
# ============================================================================
# Configure the main AI model used for reasoning, generation, and conversation.
# Supports OpenAI-compatible APIs (OpenAI, Azure OpenAI, DeepSeek, Qwen, etc.)

# LLM service provider type
# Options: openai, azure_openai, ollama, lollms
LLM_BINDING=openai

# Model name for the LLM
LLM_MODEL=

# LLM API endpoint URL
LLM_BINDING_HOST=

# LLM API authentication key
LLM_BINDING_API_KEY=

# Disable SSL certificate verification (set 'true' for self-signed certificates)
DISABLE_SSL_VERIFY=false

# ============================================================================
# Embedding Model Configuration
# ============================================================================
# Configure the text embedding model used for semantic search and RAG.
# Required for knowledge base functionality.

# Embedding service provider type
# Supported: openai, azure_openai, google, jina, huggingface, cohere, ollama
EMBEDDING_BINDING=openai

# Embedding model name
# Examples:
# - OpenAI: text-embedding-3-large, text-embedding-3-small, text-embedding-ada-002
# - Google: text-embedding-004
# - Jina: jina-embeddings-v3, jina-embeddings-v4
# - Cohere: embed-v4.0, embed-english-v3.0, embed-multilingual-v3.0
# - Ollama: all-minilm, nomic-embed-text, all-mpnet-base-v2
EMBEDDING_MODEL=text-embedding-3-large

# Embedding vector dimension
# Must match the model's output dimension:
# - text-embedding-3-large: 3072
# - text-embedding-3-small: 1536
# - text-embedding-004 (Google): 768
# - jina-embeddings-v3/v4: 1024
# - embed-v4.0 (Cohere): 1024 (supports 256, 512, 1024, 1536)
# - all-minilm (Ollama): 384
# - nomic-embed-text (Ollama): 768
EMBEDDING_DIM=3072

# Embedding API endpoint URL
# Examples:
# - OpenAI: https://api.openai.com/v1
# - Google: https://generativelanguage.googleapis.com/v1beta/openai/
# - Jina: https://api.jina.ai/v1
# - Cohere: https://api.cohere.com
# - Ollama: http://localhost:11434
EMBEDDING_BINDING_HOST=

# Embedding API authentication key
# Not required for local Ollama deployments
EMBEDDING_BINDING_API_KEY=

# Request timeout in seconds (optional, default: 30)
EMBEDDING_REQUEST_TIMEOUT=30

# Input type for task-aware embeddings (optional)
# Important for Cohere v4 (REQUIRED) and Jina v3/v4 (recommended)
# Values:
# - "search_document" (default for RAG): For documents to be indexed
# - "search_query": For search queries  
# - "classification": For classification tasks
# - "clustering": For clustering/grouping
# Note: Jina uses different names internally (e.g., "retrieval.passage" for "search_document")
# but you can use these generic values - the adapter will translate
EMBEDDING_INPUT_TYPE=search_document

# ============================================================================
